class Centrifugo < Formula
  desc "Centrifugo"
  homepage "https://github.com/stone-payments/centrifugo"
  url "https://github.com/stone-payments/centrifugo/releases/download/v%version%/centrifugo-%version%-darwin-amd64.zip"
  sha256 "%checksum%"

  def install
    system "chmod", "+x", "centrifugo"
    system "mkdir", "#{prefix}/bin"
    system "cp", "centrifugo", "#{prefix}/bin/centrifugo"
  end
end
